<resources>

    <style name="Theme.FineAnce" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/white_background</item>
        <item name="android:textColor">@color/primary_text</item>

        <item name="android:navigationBarColor">@color/black_background</item>
        <item name="android:statusBarColor">@color/white_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FineAnce.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FineAnce.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FineAnce.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>