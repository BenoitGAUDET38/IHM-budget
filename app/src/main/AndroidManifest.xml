<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fineance">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".model.ApplicationStart"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FineAnce.NoActionBar">
        <activity
            android:name=".controller.spendingActivity.AddExpenseActivity"
            android:exported="false"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".controller.spendingActivity.ScanningActivity"
            android:exported="false"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".controller.optionsActivity.SettingsActivity"
            android:exported="false"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".controller.mainActivity.MainActivity"
            android:exported="true"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>