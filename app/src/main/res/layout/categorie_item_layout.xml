<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <TextView
        android:id="@+id/categorie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categorie_seuil"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/progress_seuil"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/categorie_name"
        android:textSize="22sp" />

    <ProgressBar
        android:id="@+id/progress_seuil"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/categorie_seuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_seuil"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/categorie_name"
        android:gravity="center_horizontal|center_vertical"
        android:text="Percentage" />

</RelativeLayout>
